<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/green"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:layout_height="56dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:background="@drawable/search_edt_bg"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/image_ok"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_search_edit"
                android:layout_marginLeft="19dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edt_search_friends"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:layout_margin="8dp"
                android:background="@null"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/img_delete_edt"
                android:layout_width="wrap_content"
                android:layout_marginRight="16dp"
                android:src="@drawable/icon_search_edit_delete"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_search_result"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:background="@color/gray_setting"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:id="@+id/search_num"
            android:layout_width="wrap_content"
            android:text="2"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="个与"
            android:textSize="12sp"
            android:layout_marginLeft="9dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/search_name"
            android:layout_width="wrap_content"
            android:text="“p”"
            android:textSize="12sp"
            android:textColor="@color/green"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="相关的搜索结果"
            android:textSize="12sp"
            android:layout_marginLeft="9dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_search_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>
