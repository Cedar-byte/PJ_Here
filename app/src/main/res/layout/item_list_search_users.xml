<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <ImageView
            android:id="@+id/item_users_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_nickname"
            android:layout_toRightOf="@+id/item_users_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="17dp"
            android:text="Amber Gutierrez"
            android:textSize="16sp"
            android:textColor="@color/black_text"/>
        <TextView
            android:id="@+id/txt_number"
            android:layout_toRightOf="@+id/item_users_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="17dp"
            android:text="手机号：13588195586"
            android:textSize="14sp"
            android:textColor="@color/gray_"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <Button
                android:id="@+id/item_add"
                android:layout_width="56dp"
                android:layout_height="23.6dp"
                android:focusable="false"
                android:text="添加"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@drawable/small_btn_bg"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
