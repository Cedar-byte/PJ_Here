<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/gray_setting"
    android:layout_height="match_parent">
    <include layout="@layout/title_top_02"/>
    <TextView
        android:id="@+id/time"
        android:layout_gravity="center"
        android:text="2011-2-13 19:04"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:textSize="10sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:background="@color/time_bg"
        android:paddingRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/pic"
            android:layout_margin="16dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/conent"
                android:layout_width="match_parent"
                android:paddingTop="14.5dp"
                android:paddingRight="14dp"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/persionnal_puperwidow"
                android:paddingBottom="8.5dp"
                android:background="@drawable/qipao"
                android:text="你好，我是帅气的钱老师，赶紧加我为好友吧！"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/agreed"
                    android:layout_width="120dp"
                    android:text="同意"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_agreed"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp" />
                <TextView
                    android:id="@+id/refuce"
                    android:layout_width="120dp"
                    android:text="拒绝"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/btn_confuge"
                    android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>