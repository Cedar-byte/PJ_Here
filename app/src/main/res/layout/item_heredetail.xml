<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_heredetail_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="18dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_heredetail_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/here_time"
                        android:text="工业设计小王子"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/item_heredetail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:textColor="@color/here_time"
                        android:text="2011-2-13 19:04"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/item_heredetail_sex"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginTop="1.5dp"
                    android:padding="3dp"
                    android:src="@drawable/icon_women_small" />

                <TextView
                    android:id="@+id/item_heredetail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp"
                    android:textColor="@color/persionnal_puperwidow"
                    android:text="如此良辰美景，但得一人共赏~```" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>