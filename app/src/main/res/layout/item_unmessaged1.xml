<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lay_messageitem1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/message1_pic"
            android:layout_margin="16dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="1dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/message1_name"
                    android:text="郑钱囧"
                    android:textSize="16sp"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/message1_time"
                    android:text="12.22"
                    android:textSize="10sp"
                    android:textColor="@color/gray_text"
                    android:layout_marginRight="16dp"
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/message1_conent1"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="评论了你在"
                    android:padding="6dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/message1_conent2"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:text="杭州湾信息港"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/green"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/message1_conent3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="的HERE"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:gravity="center|left"
                    android:layout_marginRight="8dp"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="19dp"
        android:background="@color/persionnal_puperwidow_line"
        android:layout_height="0.5dp" />


</LinearLayout>