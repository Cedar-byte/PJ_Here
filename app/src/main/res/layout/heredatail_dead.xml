<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_top" />

    <include layout="@layout/here_detail_banner" />
    <ImageView
        android:id="@+id/simple_image"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="320dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/index_gallery"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/here_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="18dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/herer_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="工业设计小王子"
                        android:textColor="@color/here_time"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/here_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:text="2011-2-13 19:04"
                        android:textColor="@color/here_time"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/herer_sex"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginTop="1.5dp"
                    android:padding="3dp"
                    android:src="@drawable/icon_women_small" />

                <TextView
                    android:id="@+id/here_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="如此良辰美景，但得一人共赏~```"
                    android:textColor="@color/persionnal_puperwidow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/icon_location" />

                    <TextView
                        android:id="@+id/scene_name1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_weight="1"
                        android:text="杭州湾信息港"
                        android:textColor="@color/green"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/upvote"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/upvote_image"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginLeft="11dp"
                            android:src="@drawable/icon_here_not_dianzan" />

                        <TextView
                            android:id="@+id/heredetail_zan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:text="13"
                            android:textColor="@color/here_time"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/comment"
                        android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="11dp"
                        android:src="@drawable/icon_here_comment" />

                    <TextView
                        android:id="@+id/heredetail_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="16dp"
                        android:text="2"
                        android:textColor="@color/here_time"
                        android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="9dp"
            android:background="@color/gray_setting" />
    </LinearLayout>


</RelativeLayout>